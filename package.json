{
  "name": "nittcgak.github.io",
  "scripts": {
    "start": "yarn build-css && yarn autoprefixer",
    "build-css": "node-sass --include-path scss style/index.scss style/index.css --output-style compressed",
    "build": "npx gulp pug && npx gulp scss",
    "autoprefixer": "postcss --use autoprefixer --no-map style/index.css -d style/",
    "format": "prettier --write './**/*.{html,scss,js}'",
    "scss_watcher": "onchange './style/**/*.scss' -- npx gulp scss",
    "pug_wacher": "onchange './src/index.pug' -- npx gulp pug"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-imagemin": "^8.0.0",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "node-sass": "^7.0.1",
    "node-sass-import": "^2.0.1",
    "onchange": "^7.1.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "sass": "^1.55.0"
  },
  "prettier": {
    "tabWidth": 2
  }
}
